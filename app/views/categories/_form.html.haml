= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .field
    = f.label :category_tree
    = f.select(:category_tree_id, options_for_select(main_category_options, f.object.category_tree_id), include_blank: true)
  .actions
    = f.submit nil, class: 'btn btn-primary'
