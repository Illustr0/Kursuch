.page-header
  %h1= t('headers.categories.index')

%table
  %thead
    %tr
      %th= Category.human_attribute_name(:name)
      %th= Category.human_attribute_name(:category_tree)
      %th
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= category.category_tree.nil? ? 'root' : category.category_tree.name
        %td= link_to 'Show', category
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Category', new_category_path
